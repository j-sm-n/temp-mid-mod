<% if current_user %>

  <%= form_for @link do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %></br>

    <%= f.label :url %>
    <%= f.text_field :url %></br>

    <%= f.submit "Add Link" %>
  <% end %>

  <div class="user-links">
    <% @current_links.each do |link| %>
      <p> <%= link.title %> <%= link.url %>  <%= link_to "Edit", edit_link_path(link) %></p>
    <% end %>
  </div>

<% else %>

  <%= link_to "Sign Up", new_user_registration_path %>
  <%= link_to "Log In", new_user_session_path %>

<% end %>
